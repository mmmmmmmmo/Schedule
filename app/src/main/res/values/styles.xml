<resources>
    <!-- Base application theme. -->

    <style name="SplashTheme" parent="@style/BaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/icon_bg</item>
    </style>

    <style name="MaterialCalendarView">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="mcv_firstDayOfWeek">monday</item>
        <item name="mcv_selectionColor">@color/colorPrimary</item>
        <item name="mcv_showOtherDates">all</item>
        <item name="mcv_weekDayLabels">@array/week_array</item>
        <item name="mcv_weekDayTextAppearance">@style/CalendarWeekDay</item>
    </style>

    <style name="CalendarWeekDay">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:background">#FF00FF</item>
    </style>

    <style name="bottomNavigationText">
        <item name="android:textSize">11sp</item>

    </style>

    <style name="bottomNavigationText.inactive">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="VibrationTitle" parent="ItemText">
        <item name="android:textSize">@dimen/xm_text_size_l</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalibrateProgressBar" parent="@android:style/Widget.Material.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="TimeWheelPicker">
        <item name="wheel_item_text_size">@dimen/xm_text_size_l</item>
        <item name="wheel_item_text_color">@color/xm_text_primary</item>
        <item name="wheel_selected_item_text_color">#4088FF</item>
        <item name="wheel_visible_item_count">3</item>
        <item name="wheel_item_space">28dp</item>
    </style>

    <style name="vertical_dotted_line_style">
        <item name="android:layout_width">10px</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/line_vertical</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="DeviceHeaderText" parent="@style/ItemText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/xm_text_size_s</item>
    </style>

    <style name="ListDivider">
        <item name="android:background">@color/search_bk</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="OptionRadioButton">
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:background">@drawable/option_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/xm_text_size_s</item>
    </style>

    <style name="OptionRadioButton.left">
        <item name="android:textColor">@color/text_color_selector_blue</item>
        <item name="android:background">@drawable/option_selector_white_l</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="OptionRadioButton.right">
        <item name="android:textColor">@color/text_color_selector_blue</item>
        <item name="android:background">@drawable/option_selector_white_r</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="GeoRadioButton">
        <item name="android:textColor">@color/text_color_selector_white</item>
        <item name="android:background">@drawable/option_selector_geo</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="XmTab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">#FF55A0</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:background">@drawable/tab_background</item>
    </style>

    <style name="MaterialButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:height">46dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MaterialButton.Blue">
        <item name="android:background">@drawable/shape_corners_blue_bg</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="LargeDivider">
        <item name="android:background">#f1f2f3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="Setting_List2">
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">17dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:gravity">center_vertical|left|start</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--图片-->
    <style name="Image">
        <item name="android:scaleType">center</item>
    </style>

    <!--图片 前进-->
    <style name="Image.Forward">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:src">@drawable/icon_arrows</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_up_out</item>
    </style>

    <style name="MenuToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/MenuOverflowStyle</item>
    </style>

    <style name="MenuOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_menu</item>
    </style>

    <style name="ClearToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ClearOverflowStyle</item>
    </style>

    <style name="ClearOverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_clear</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 进度条背景色 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dip" />
            <gradient
                android:startColor="#FFDFDFDF"
                android:centerColor="#FFDFDFDF"
                android:centerY="0.75"
                android:endColor="#FFDFDFDF"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="8dip" />
                <gradient
                    android:startColor="#83B2FF"
                    android:centerColor="#83B2FF"
                    android:centerY="0.75"
                    android:endColor="#83B2FF"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dip" />
                <gradient
                    android:startColor="#83B2FF"
                    android:centerColor="#83B2FF"
                    android:centerY="0.75"
                    android:endColor="#83B2FF"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>